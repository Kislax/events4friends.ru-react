{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "import/prefer-default-export": 0,
    "react/prop-types": 0,
    "quote-props": [
      "error",
      "as-needed"
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true
      }
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ]
  },
  "plugins": [
    "react",
    "import",
    "jsx-a11y",
    "react-hooks"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}